<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/messages_header">

        <ListPreference
            app:defaultValue="us"
            app:entries="@array/country_entries"
            app:entryValues="@array/country_values"
            app:key="country"
            app:title="@string/country_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            app:defaultValue="general"
            app:entries="@array/category_entries"
            app:entryValues="@array/category_values"
            app:key="category"
            app:title="@string/category_title"
            app:useSimpleSummaryProvider="true" />

    </PreferenceCategory>



</PreferenceScreen>